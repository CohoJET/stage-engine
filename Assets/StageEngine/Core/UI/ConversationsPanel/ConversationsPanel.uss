/* === SCENE INFO === */
SceneInfoElement {
    flex-direction: row;
    align-items: flex-start; 
}

#scene-info {
    font-size: 12px;
    color: #a0906f;
    letter-spacing: 1px;
    padding: 8px 16px;
    background-color: var(--color-bg-secondary);
    border-width: var(--border-width-main);
    border-color: var(--border-color);
    border-radius: 16px;
    margin-left: 16px;
    margin-right: 16px;
}

.scene-info-spacer {
    height: 50%;
    flex: 1;
    border-bottom-width: var(--border-width-main);
    border-color: var(--border-color);
}

/* === CONVERSATION BOX === */

ConversationBoxElement {
    flex-grow: 1;
    height: 100%;
    overflow: hidden;
    min-height: 200px;
}

#conversation-content {
    flex-direction: column;
    justify-content: flex-end;
    min-height: 100%;
    flex-shrink: 1;
}

/* === CONVERSATION MESSAGES === */

ConversationMessageElement {
    width: 100%;
    flex-direction: row;
    margin-bottom: 20px;
    flex-shrink: 0;
}

.conversation-message-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-sm);
    min-height: 24px;
}

.conversation-message-flair {
    width: 3px;
    background-color: #FF0000;
}
.conversation-message-container {
    flex-grow: 1;
    padding-left: 8px;
}

.conversation-message-sender {
    color: var(--color-text-primary);
    font-size: 13px;
    -unity-font-style: bold;
    flex: 1;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.conversation-message-content {
    color: var(--color-text-secondary);
    white-space: normal;
    margin: 0;
}

.conversation-message-timestamp {
    color: var(--color-text-muted);
    font-size: 11px;
    flex-shrink: 0;
}
